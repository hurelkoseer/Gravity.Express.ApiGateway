{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{tenant}/customers",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5048
        }
      ],
      "UpstreamPathTemplate": "/api/{tenant}/customers",
      "UpstreamHttpMethod": [
        "Post",
        "Get",
        "Put",
        "Delete"
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [
          "gravity.express.api"
        ]
      }
    },
    {
      "DownstreamPathTemplate": "/api/{tenant}/deliveries",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5048
        }
      ],
      "UpstreamPathTemplate": "/api/{tenant}/deliveries",
      "UpstreamHttpMethod": [
        "Post",
        "Get",
        "Put",
        "Delete"
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [
          "gravity.express.api"
        ]
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5226",
    "AuthenticationOptions": {
      "IdentityServerAuthentication": {
        "Authority": "http://localhost:5005",
        "ApiName": "gravity.express.api",
        "SupportedTokens": "Both",
        "ApiSecret": "secret",
        "RequireHttpsMetadata": false
      }
    }
  }
}
